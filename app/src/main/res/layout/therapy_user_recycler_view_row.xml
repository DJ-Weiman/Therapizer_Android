<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        app:cardCornerRadius="20sp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp" >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clientImageView"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:backgroundTint="@color/patient_withdrawal_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8sp"
                    android:src="@drawable/img_professional_client"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anne Watson"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold_font"
                android:paddingBottom="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/clientImageView"
                android:layout_marginStart="15sp"/>

            <TextView
                android:id="@+id/doctorProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 years old"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_regular_font"
                android:paddingBottom="10sp"
                app:layout_constraintStart_toEndOf="@id/clientImageView"
                app:layout_constraintTop_toBottomOf="@id/doctorName"
                android:layout_marginStart="15sp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/callButton"
                android:layout_width="match_parent"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_height="35sp"
                android:layout_marginTop="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfession"
                android:backgroundTint="@color/appThemePurple">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="Online Call"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>