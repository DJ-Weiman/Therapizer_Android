<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        tools:context=".activities.registration.PatientRegistrationActivity">

        <LinearLayout
            android:id="@+id/topActionBarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <include
                android:id="@+id/topActionBar"
                layout="@layout/top_title_bar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/patient_registration_top_text"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold_font"
                android:textSize="23sp"
                android:layout_marginTop="45sp"
                android:layout_marginStart="25sp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6sp"
                android:orientation="horizontal"
                android:layout_marginTop="50sp"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:id="@+id/generalInformationMarker"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="25sp"
                    app:cardCornerRadius="8sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/credentialsMarker"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5sp"
                    app:cardCornerRadius="8sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/personalInformationMarker"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="25sp"
                    app:cardCornerRadius="8sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/generalInformationLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="45sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="50sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/firstNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/lastNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/credentialsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="45sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/credentials_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="50sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/usernameInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_hint_text"
                    android:fontFamily="@font/nuniot_semi_bold_font"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_hint_text"
                    android:fontFamily="@font/nuniot_semi_bold_font"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_password_text"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <EditText
                        android:id="@+id/confirmPasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalInformationLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="45sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="50sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <Spinner
                        android:id="@+id/ageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"  />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drug"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <Spinner
                        android:id="@+id/drugSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage"
                    android:fontFamily="@font/nunito_bold_font"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="8sp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0sp">

                    <Spinner
                        android:id="@+id/dosageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:layout_marginTop="40sp"
                    android:backgroundTint="@color/appThemePurple"
                    app:cardCornerRadius="12sp"
                    android:layout_marginStart="25sp"
                    android:layout_marginEnd="25sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold_font"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:text="@string/next_text"
                        android:textColor="@color/white"
                        />

                </com.google.android.material.card.MaterialCardView>

                <ProgressBar
                    android:id="@+id/signUpProgressBar"
                    android:visibility="invisible"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"/>


            </FrameLayout>


        </LinearLayout>

    </LinearLayout>
</layout>