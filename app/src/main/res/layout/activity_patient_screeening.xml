<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.registration.PatientScreeeningActivity"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:id="@+id/topActionBarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">

            <include
                android:id="@+id/topActionBar"
                layout="@layout/top_title_bar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/clientText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold_font"
                    android:text="@string/screening_text"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550sp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="20sp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/screeningRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_marginTop="40sp"
            android:backgroundTint="@color/appThemePurple"
            app:cardCornerRadius="12sp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold_font"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="@string/next_text"
                android:textColor="@color/white"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>