<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UserTypeSelectionActivity"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/topActionBar"
                layout="@layout/top_title_bar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:paddingStart="25sp"
            android:paddingEnd="25sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_bold_font"
                android:textSize="25dp"
                android:text="@string/user_selection_text"
                android:textColor="@color/black"/>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginTop="25sp"
                    android:backgroundTint="@color/user_selection_green"
                    app:cardCornerRadius="15sp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="20sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_selection_patient_text"
                                android:fontFamily="@font/nunito_bold_font"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/patientContinueButton"
                                android:layout_width="130sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                app:cardCornerRadius="12sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/continue_text"
                                        android:fontFamily="@font/nunito_regular_font"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"/>

                                    <ImageView
                                        android:layout_width="25sp"
                                        android:layout_height="25sp"
                                        android:src="@drawable/continue_icon"/>

                                </LinearLayout>



                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>


                          <ImageView
                              android:layout_width="120sp"
                              android:layout_height="120sp"
                              android:src="@drawable/patient_icon"
                              android:layout_gravity="end|center_vertical"
                              android:layout_marginEnd="25sp"/>


                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginTop="25sp"
                    android:backgroundTint="@color/user_selection_purple"
                    app:cardCornerRadius="15sp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="20sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_selection_professional_text"
                                android:fontFamily="@font/nunito_bold_font"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/professionalContinueButton"
                                android:layout_width="130sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="15sp"
                                app:cardCornerRadius="12sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/continue_text"
                                        android:fontFamily="@font/nunito_regular_font"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"/>

                                    <ImageView
                                        android:layout_width="25sp"
                                        android:layout_height="25sp"
                                        android:src="@drawable/continue_icon"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="120sp"
                            android:layout_height="120sp"
                            android:src="@drawable/user_professional_icon"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="20sp"/>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>